{
  "manifest_version": 2,
  "name": "Brave Search Mod",
  "version": "1.0",
  "description": "Customize the Brave Search home page",
  "permissions": ["https://search.brave.com/*"],
  "content_scripts": [
    {
      "matches": ["https://search.brave.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    },
    "default_title": "Brave Search Mod"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
